<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with model: article, class: 'shadow p-3 mb-3 bg-info rounded', local: true do |f| %>
        <div class="form-group row">
          <label for="article_title" class="col-2 col-form-label text-light">Title</label>

          <div class="col-10">
            <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: 'Title of article' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="article_description" class="col-2 col-form-label text-light">Description</label>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: 'Description' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= link_to '[Cancel and return to articles list]', articles_path, class: 'text-info' %>
  </div>
</div>
