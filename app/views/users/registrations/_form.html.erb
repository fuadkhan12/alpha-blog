<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: resource %>

      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'shadow p-3 mb-3 bg-info rounded' } do |f| %>
        <div class="form-group row">
          <label for="username" class="col-2 col-form-label text-light">Username</label>

          <div class="col-10">
            <%= f.text_field :username, class: 'form-control shadow rounded', placeholder: 'Enter username' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="user_email" class="col-2 col-form-label text-light">Email</label>

          <div class="col-10">
            <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter your email address' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-2 col-form-label text-light">Password</label>

          <div class="col-10">
            <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Password' %>
          </div>
        </div>

        <div class="form-group row">
          <label for="password_confirmation" class="col-2 col-form-label text-light">Password Confirmation</label>

          <div class="col-10">
            <%= f.password_field :password_confirmation, class: 'form-control shadow rounded', placeholder: 'Confirm Password' %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Sign up", class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
